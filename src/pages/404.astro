---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found" description="The page you're looking for could not be found.">
  <section class="section_404">
    <div class="padding-global">
      <div class="container-large">
        <div class="padding-section-large">
          <div class="text-align-center">
            <div class="margin-bottom margin-medium">
              <h1 class="heading-style-h1">404</h1>
            </div>
            <div class="margin-bottom margin-medium">
              <p class="text-size-medium">The page you're looking for could not be found.</p>
            </div>
            <div class="button-group justify-content-center">
              <a href="/" class="button w-button">Return Home</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
